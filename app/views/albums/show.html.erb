
<h4 class="text-center" id= "album-title">
<%= @album.title %>
</h4>
<div class="text-center album-body">
<%= @album.body %>
</div>


<% if @album.images.attached? %>
	<div class="card-columns">
		<% @album.images.each do |image| %>

		<%= link_to image_tag image do %>

  			<%= image_tag image, class: "card album-image gallery-item" %>

  			<% end %>

  			<%= link_to "Remove", delete_image_attachment_album_url(image), method: :delete, data: {confirm: "Are you sure?"} if current_admin %>
  	<% end %>
	<% end %>
</div>

</br>
</br>


<% if current_admin %>
	<%= link_to 'Edit album', edit_album_path(@album), class: "btn btn-secondary" %> 
	<%= link_to 'Destroy', @album, method: :delete, data: { confirm: 'Are you sure you want to delete all album?' }, :class => "btn btn-danger" %>
<% end %>

<%= link_to 'Go Back To Albums', albums_path, class: "btn btn-info" %>


<div class = "lightbox">
	<div class = "lightbox-content">
		<div class = "lightbox-controls">
			<a href="#" class="lightbox-close">Close</a>
			<a href="#" class="lightbox-prev"> < </a>
			<a href="#" class="lightbox-next"> > </a>
		</div>

		<div class = "lightbox-image"></div>
	</div>
</div>

<style>
body {
	background-color: #eeeeee;
	margin: 0;
}
</style>


































